<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<GridPane gridLinesVisible="true" prefHeight="361.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.lakidemon.jemail.controller.MainController">
   <children>
      <ProgressBar fx:id="mailProgress" progress="0.0" />
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true" GridPane.columnIndex="1">
         <content>
            <VBox fx:id="messagesContainer" alignment="TOP_CENTER" spacing="5.0" />
         </content>
      </ScrollPane>
      <WebView fx:id="messageView" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2" />
   </children>
   <columnConstraints>
      <ColumnConstraints minWidth="10.0" percentWidth="20.0" prefWidth="100.0" />
      <ColumnConstraints minWidth="10.0" percentWidth="30.0" prefWidth="100.0" />
      <ColumnConstraints percentWidth="50.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints percentHeight="100.0" />
   </rowConstraints>
</GridPane>
